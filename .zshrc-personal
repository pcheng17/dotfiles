# User configuration

export FZF_DEFAULT_COMMAND='rg --files --no-ignore-vcs --hidden'
export FZF_DEFAULT_OPTS="--height 50% --border"

# Enable vi mode
bindkey -v

# Tell `less` not to paginate if less than a page
export LESS="-F -X $LESS"

# Python virtualenv settings
export WORKON_HOME=$HOME/.virtualenvs
case "$OSTYPE" in
    darwin*)
        # Location of Python with virtualenvwrapper should already be set in path
        source /opt/homebrew/bin/virtualenvwrapper.sh
    ;;
    linux*)
        export VIRTUALENVWRAPPER_PYTHON=/usr/bin/python3
	    source /usr/local/bin/virtualenvwrapper.sh
    ;;
esac

setopt auto_cd
case "$OSTYPE" in
    darwin*)
        cdpath+=~/Workspace
    ;;
    linux*)
	    # ...
    ;;
esac

# CLI pomodoro 
declare -A pomo_options
pomo_options["work"]="-n Work 45m"
pomo_options["break"]="-n Break 10m"

pomodoro () {
  if [ -n "$1" -a -n "${pomo_options["$1"]}" ]; then
  val=$1
  echo "${pomo_options["$1"]}" | xargs timer
  fi
}
alias pom="pomodoro"

